extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content 
    main 
        .grid
            if prods.length > 0
                each product in prods 
                    article.card.product-item 
                        header.card__header     
                            h1.product__title #{product.title}
                        .card__image 
                            img(src="https://cd n.pixabay.com/photo/2018/04/04/13/38/nature-3289812_1280.jpg", alt="a book")
                        .card__content 
                            h2.product_price $19.99
                            p.product__description A very interesting book 

                        .card__content 
                            button.btn Add to Cart
            else    
                h1 No products
                