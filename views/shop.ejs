<%- include("includes/head.ejs") %>
    <link rel="stylesheet" href="/css/product.css" />
</head>

<body>
    <%- include("includes/navigation.ejs") %>

    <main>
        <% if(prods.length>0){ %>
            <div class="grid">
                <% for(let product of prods){ %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>   
                        <div class="card__image">
                            <img src="https://static.vecteezy.com/system/resources/previews/009/384/332/original/old-vintage-book-clipart-design-illustration-free-png.png" alt="a book" />
                        </div> 
                        <div class="card__content">
                            <h2 class="product_price">$19.99</h2>
                            <p class="product__description">A very interesting book</p>
                        </div> 
                        <div class="card__content">
                            <button class="btn">Add to Cart</button>
                        </div> 
                    </article>    
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products HBS!</h1> 
        <% } %>
    </main>
<%- include("includes/end.ejs") %>